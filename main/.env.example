# Live Agent Environment Configuration
# Copy this file to .env and update the values

# ==================== S3/MinIO Configuration ====================
# For local development with MinIO(compatible with S3)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET_NAME=live-agent-files
S3_ENDPOINT_URL=
S3_PUBLIC_BASE_URL=

# ==================== Security ====================
SECRET_KEY=dev-secret-key-change-in-production

# ==================== Token Configuration ====================
TOKEN_EXPIRE_DAYS=7

# ==================== Live Agent API Server Configuration ====================
# These are optional, defaults are set in settings.py
# LIVE_AGENT_API_HOST=0.0.0.0
# LIVE_AGENT_API_PORT=8080
# LIVE_AGENT_API_DEBUG=False

# ==================== Database Configuration ====================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/live_agent

FISH_API_KEY=your-fish-api-key
OPENAI_API_KEY=your-openai-key
GROQ_API_KEY=your-groq-api-key
OPENAI_MODEL=