# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/live_agent

# AWS S3 / MinIO Configuration
# S3-compatible storage credentials
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# AWS Region (use default for MinIO)
AWS_REGION=us-east-1

# S3 Bucket Name
S3_BUCKET_NAME=test-bucket

# S3 Endpoint URL
# For MinIO local development (outside Docker): http://localhost:9000
# For MinIO inside Docker: http://minio:9000
# For AWS S3: leave empty or comment out
S3_ENDPOINT_URL=http://localhost:9000

# S3 Public Base URL
# This is the URL prefix used to generate public file URLs
# For local MinIO: http://localhost:9000
# For production S3: https://s3.amazonaws.com or your CloudFront URL
S3_PUBLIC_BASE_URL=http://localhost:9000

# Security Configuration
# Secret key for JWT token signing and other security features
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Token expiration time in days
TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Debug mode (set to False in production)
DEBUG=True

# External Services
FISH_API_KEY=your-fish-audio-api-key-here

